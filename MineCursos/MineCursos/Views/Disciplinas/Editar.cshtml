@model MineCursos.Models.Disciplinas

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<div>
    <form action="/Disciplinas/Editar?id=@Model.DISID" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Disciplina</label>
                <input type="text" class="form-control"
                       maxlength="100" id="descricao" name="descricao"
                       value="@Model.DISDESCRIACAO"
                       required />
        </div>
        <div>
            <class ="form-group">
                <label for="curso">Curso</label>
                <input type="text" class="form-control"
                       id="curso" name="curso" min="0"
                       value="@Model.Cursos.CURSODESCRICAO"
                       required />

        </div>

        <div>
            <class ="form-group">
                <label for="carga">Carga</label>
                <input type="text" class="form-control"
                       id="carga" name="carga" min="0"
                       value="@Model.DISCH"
                       required />

        </div>

        <div>

            <br />

            <div>
                <button type="submit" class="btn btn-success">Salvar</button>
                <a href="/Disciplinas/index" class="btn btn-primary">Voltar</a>

            </div>


        </div>
    </form>
</div>