@{
    ViewBag.Title = "Disciplinas";
}

<h2>Criar</h2>

<div>
    <form action="/Disciplinas/Criar" method="post">


        <div class="form-group">
            <label for="descricao">Descrição</label>
            <input type="text" class="form-control"
                   maxlength="100" id="descricao" name="descricao"
                   required />
        </div>

        <div class="form-group">
            <label>Curso</label>
            <select id="curso" name="curso">
                @foreach (var item in ViewBag.listaCursos)
                {
                    <option value="@item.CURSOID">@item.CURSODESCRICAO</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label for="carga">Carga horária</label>
            <input type="number" class="form-control"
                   id="carga" name="carga"
                   required />
        </div>



        <div>
            <a href="/Disciplinas/Index" class="btn btn-primary">Voltar</a>
            <button type="submit" class="btn btn-success">Criar</button>
        </div>

    </form>
</div>