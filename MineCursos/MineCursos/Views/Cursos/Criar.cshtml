@model IEnumerable<MineCursos.Models.Cursos>

@{
    ViewBag.Title = "Criar";
}

<h2>Criar</h2>

<div>
    <form action="/Cursos/Criar" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Descrição</label>
                <input type="text" class="form-control"
                       maxlength="100" id="descricao" name="descricao"
                       required />
        </div>
        <div>
            <class ="form-group">
                <label for="habilidade">habilidade</label>
                <input  class="form-control"
                       id="habilidade" name="habilidade" min="0"
                       required />
        </div>
        <div>
            <class ="form-group">
                <label for="modalidade">Modalidade</label>
                <input  class="form-control"
                       id="modalidade" name="modalidade"  min="0"
                       required />
        </div>
      



        <div>
            <button type="submit" class="btn btn-success">Salvar</button>
            <a href="/Cursos/index" class="btn btn-primary">Voltar</a>

        </div>



    </form>
</div>







