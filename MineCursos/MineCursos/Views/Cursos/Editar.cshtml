@model MineCursos.Models.Cursos

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<div>
    <form action="/Cursos/Editar?id=@Model.CURSOID" method="post">
        <div>
            <class ="form-group">
                <label for="descricao">Curso</label>
                <input type="text" class="form-control"
                       maxlength="100" id="descricao" name="descricao"
                       value="@Model.CURSODESCRICAO"
                       required />
        </div>
        <div>
            <class ="form-group">
                <label for="habilidade">habilidade</label>
                <input type="text" class="form-control"
                       id="habilidade" name="habilidade" min="0"
                       value="@Model.CURSOCODHABILIDADE"
                       required />

        </div>

        <div>
            <class ="form-group">
                <label for="modalidade">modalidade</label>
                <input type="text" class="form-control"
                       id="modalidade" name="modalidade" min="0"
                       value="@Model.CURSOMODALIDADE"
                       required />

        </div>

        <div>

            <br />

            <div>
                <button type="submit" class="btn btn-success">Salvar</button>
                <a href="/Cursos/index" class="btn btn-primary">Voltar</a>

            </div>


        </div>
    </form>
</div>
